<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_holder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back_ground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_button"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/large_card_pressed"
        app:layout_constraintBottom_toBottomOf="@+id/image_holder"
        app:layout_constraintEnd_toEndOf="@+id/image_holder"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/image_holder"
        app:layout_constraintTop_toTopOf="@+id/image_holder"
        app:layout_constraintVertical_bias="0.92" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/get_started"
        android:textAlignment="center"
        android:textColor="@color/color_base_white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:fontFamily="@font/patrick_hand_sc"
        app:layout_constraintBottom_toBottomOf="@+id/image_button"
        app:layout_constraintEnd_toEndOf="@+id/image_button"
        app:layout_constraintStart_toStartOf="@+id/image_button"
        app:layout_constraintTop_toTopOf="@+id/image_button" />

</android.support.constraint.ConstraintLayout>
